{
    "train_batch_size": 2,
    "gradient_accumulation_steps": 1,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 0.001,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 0.001,
            "warmup_num_steps": 1000
        }
    },
    "gradient_clipping": 10.0,
    "wall_clock_breakdown": false,
    "steps_per_print": 1000,
    "fp16": {
        "enabled": false,
        "loss_scale": 0,
        "initial_scale_power": 32,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "amp": {
        "enabled": false,
        "opt_level": "O1"
    },
    "flops_profiler": {
        "enabled": true,
        "profile_step": 3,
        "module_depth": -1,
        "top_modules": 3,
        "detailed": false
    }
}